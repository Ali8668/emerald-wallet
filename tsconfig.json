{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "./"
  },
  "include": [
    "electron/**/*",
    "app/**/*",
    "stories/**/*",
    "/src/**/*",
    "package.json",
    "build-web.js"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts"
  ]
}
